{
  "name": "{{name}}",
  "description": "{{description}}",
  "version": "0.0.0-semantic-release",
  "keywords": [
    "web"
  ],
  "scripts": {
    "start": "rollup -c rollup.config.js -w",
    "test": "echo disabled",
    "prepare": "rollup -c rollup.config.js",
    "package": "npm-pkgbuild pkgbuild pacman makepkg"
  },
  "dependencies": {
    "bootstrap": "^4.4.1",
    "bootstrap-vue": "^2.1.0",
    "vue": "^2.6.10",
    "vue-router": "^3.1.3",
    "vuex": "^3.1.2"
  },
  "devDependencies": {
    "rollup-plugin-node-resolve": "--delete--",
    "rollup-plugin-json": "--delete--",

    "@rollup/plugin-json": "^4.0.0",
    "@rollup/plugin-node-resolve": "^6.0.0",

    "@semantic-release/exec": "^3.3.7",
    "ava": "^2.4.0",
    "browser-sync": "^2.26.7",
    "express": "^4.17.1",
    "http-proxy-middleware": "^0.19.1",
    "npm-pkgbuild": "^6.10.14",
    "puppeteer": "^1.19.0",
    "rollup": "1.27.10",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy": "^3.1.0",
    "rollup-plugin-css-only": "^1.0.0",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-vue": "^5.1.4",
    "semantic-release": "^15.13.31",
    "vue-template-compiler": "^2.6.10",
    "connect-history-api-fallback": "^1.6.0"
  },
  "engines": {
    "node": ">=12.13.1"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "ava": {
    "files": [
      "tests/*-test.mjs"
    ],
    "require": [
      "esm"
    ],
    "babel": false,
    "compileEnhancements": false,
    "extensions": [
      "mjs"
    ]
  },
  "config": {
    "api": "/api",
    "proxyTarget": "https://somewhere.com/",
    "urlPrefix": "/services/{{name}}/"
  },
  "pacman": {
    "groups": "{{group}}",
    "hooks": "pacman/install.sh",
    "installdir": "/services/{{name}}/frontend",
    "content": {
      "${installdir}/": {
        "base": "public"
      },
      "/etc/nginx/config.d/${name}.conf": "pacman/nginx.conf"
    },
    "depends": {
      "systemd": ">=244",
      "nginx-mainline": ">=1.17.3"
    }
  },
  "template": {
    "usedBy": [
      "arlac77/hook-ci-frontend"
    ]
  }
}
